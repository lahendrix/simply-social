
<div class="settings-container">

    <form class="settings-form">
        <fieldset>
            <legend>Account</legend>
            <div>
                <input type="text" id="name" placeholder="Name"/>
            </div>
            <div>
                <input type="email" id="email" placeholder="Email Address"/>
            </div>
            <div>
                <input type="password" id="password" />
            </div>
        </fieldset>
        <fieldset>
            <legend>Notifications</legend>
            <div>
                <div class="onoffswitch">
                    <input type="checkbox" name="switch1" class="onoffswitch-checkbox" id="switch2" checked>
                    <label class="onoffswitch-label" for="switch1">
                        <span class="onoffswitch-inner"></span>
                        <span class="onoffswitch-switch"></span>
                    </label>
                </div>
                <span>email me when my posts are added as favorites</span>
            </div>
            <div>
                <div class="onoffswitch">
                    <input type="checkbox" name="switch2" class="onoffswitch-checkbox" id="switch2" checked>
                    <label class="onoffswitch-label" for="myonoffswitch">
                        <span class="onoffswitch-inner"></span>
                        <span class="onoffswitch-switch"></span>
                    </label>
                </div>
            </div>
            <div>
                <div class="onoffswitch">
                    <input type="checkbox" name="switch3" class="onoffswitch-checkbox" id="switch3" checked>
                    <label class="onoffswitch-label" for="myonoffswitch">
                        <span class="onoffswitch-inner"></span>
                        <span class="onoffswitch-switch"></span>
                    </label>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>Privacy</legend>
            <div class="onoffswitch">
                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" checked>
                <label class="onoffswitch-label" for="myonoffswitch">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
        </fieldset>
    </form>
</div>
